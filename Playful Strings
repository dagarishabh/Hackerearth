#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
	scanf("%d",&t);
	while(t--)
	{
	    char s[51];
	    scanf("%s",s);
	    int i,l,m=0;
	    l=strlen(s);
	    for(i=0;i<l-1;i++)
	    {
	        if(abs((int)s[i]-(int)s[i+1])==1||abs((int)s[i]-(int)s[i+1])==25)
	        {
	            m++;
	        }
	    }
	    if(m==l-1)
	    printf("YES\n");
	    else
	    printf("NO\n");
	}
	return 0;
}
Language: C++
